{
  "extends": "@vanyauhalin/eslint-config-typescript",
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "overrides": [
    {
      "files": "scripts.ts",
      "rules": {
        "import/no-extraneous-dependencies": "off"
      }
    },
    {
      "files": "bin/*.cjs",
      "rules": {
        "global-require": "off",
        "import/no-unresolved": "off",
        "no-new-func": "off"
      }
    },
    {
      "files": "src/*.ts",
      "rules": {
        "guard-for-in": "off",
        "no-restricted-syntax": "off",
        "promise/prefer-await-to-callbacks": "off"
      }
    }
  ]
}
